{
  "name": "lovelace-health-card",
  "version": "1.0.0",
  "description": "Une carte Lovelace personnalisée pour Home Assistant affichant les capteurs Health Connect dans une interface moderne et organisée",
  "main": "dist/health-connect-card.js",
  "scripts": {
    "build": "echo 'Build complete - fichiers prêts dans dist/'",
    "dev": "echo 'Ouvrez test.html dans votre navigateur pour tester'",
    "test": "echo 'Tests disponibles via test.html'",
    "lint": "echo 'Linting des fichiers...'",
    "serve": "python -m http.server 8000 || python3 -m http.server 8000"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "health-connect",
    "custom-card",
    "health",
    "fitness",
    "android",
    "sensors",
    "hacs"
  ],
  "author": {
    "name": "LightD31",
    "url": "https://github.com/LightD31"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LightD31/lovelace-health-card.git"
  },
  "bugs": {
    "url": "https://github.com/LightD31/lovelace-health-card/issues"
  },
  "homepage": "https://github.com/LightD31/lovelace-health-card#readme",
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "hacs.json"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "hacs": {
    "name": "Health Connect Card",
    "filename": "health-connect-card.js",
    "render_readme": true,
    "domains": ["sensor"],
    "iot_class": "Local Polling",
    "homeassistant": "2023.4.0"
  },
  "config": {
    "homeAssistant": {
      "minVersion": "2023.4.0"
    },
    "supportedDomains": [
      "sensor"
    ],
    "supportedEntities": [
      "sensor.health_connect_active_calories_burned",
      "sensor.health_connect_blood_glucose",
      "sensor.health_connect_body_fat",
      "sensor.health_connect_diastolic_blood_pressure",
      "sensor.health_connect_distance",
      "sensor.health_connect_elevation_gained",
      "sensor.health_connect_floors_climbed",
      "sensor.health_connect_heart_rate",
      "sensor.health_connect_heart_rate_variability",
      "sensor.health_connect_oxygen_saturation",
      "sensor.health_connect_respiratory_rate",
      "sensor.health_connect_resting_heart_rate",
      "sensor.health_connect_sleep_duration",
      "sensor.health_connect_steps",
      "sensor.health_connect_systolic_blood_pressure",
      "sensor.health_connect_total_calories_burned",
      "sensor.health_connect_vo2_max",
      "sensor.health_connect_weight"
    ]
  }
}
